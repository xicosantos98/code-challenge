{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "extends": [
        "prettier",
        "airbnb-base"
      ],
      "plugins": [
        "prettier"
      ],
    "rules": {
      "prettier/prettier": [
        "error", 
        { 
          "endOfLine": "auto",
          "singleQuote": true,
          "trailingComma": "all",
          "tabWidth": 2,
          "semi": true,
          "arrowParens": "always"
        }
      ],
      "no-unused-vars": "warn",
      "no-console": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "no-process-exit": "off",
      "class-methods-use-this": "off",
      "linebreak-style": 0,
      "import/no-dynamic-require": 0,
      "consistent-return": 0,
      "no-underscore-dangle": 0,
      "max-len": [
          1,
          150
      ],
      "no-multiple-empty-lines": [
          "error",
          {
              "max": 1
          }
      ]
    }
  }